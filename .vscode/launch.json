{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "debug server.ts",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "node",
        "runtimeArgs": ["--nolazy", "-r", "${workspaceRoot}/server/node_modules/ts-node/register/transpile-only"],
  
        "args": ["server/server.ts"],
        
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**"]
      }
    ]
  }